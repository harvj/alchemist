<h2><%= @sets.count %> cards</h2>

<% @sets.each do |set| %>
  <%= button_to "x", deck_deck_card_path(@deck, set[:combos].first.deck_card_id), method: :delete, form_class: 'delete' %>
  <span class='deck-card badge <%= Card.rarities.key(set[:combos].first.card_rarity) %>'>
    <%= link_to set[:name], card_path(set[:combos].first.card_id) %>
  </span>
  <span class="badge"><%= set[:set_score] %></span>
  <% set[:combos].sort_by{|c| [-c.final_offense, -c.final_defense]}.each do |combo| %>
    <span
      class='deck-combo'
      title='<%= "#{combo.final_name} (#{combo.match_name}, #{combo.final_offense} #{combo.final_defense}) #{combo.power}" %>'
    >
      <span class="<%= offense_class(combo.final_offense) %>">
        <%= combo.final_offense %>
      </span>
      <span class="<%= defense_class(combo.final_defense) %>">
        <%= combo.final_defense %>
      </span>
    </span>
  <% end %><p>
<% end %>
