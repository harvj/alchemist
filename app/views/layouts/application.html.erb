<%
  side_nav_location = lookup_context.exists?("#{controller_name}/_side_nav") ? controller_name : 'application'
%>

<!DOCTYPE html>
<html>
<head>
  <title>Alchemist</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render partial: 'application/top_nav' %>

<div class='container-fluid'>
  <div class='row'>
    <div id='side'>
      <%= render partial: "#{side_nav_location}/side_nav" %>
    </div>
    <div id='main'>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
